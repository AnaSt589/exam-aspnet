@model Exam.Clients.WebUI.Common.Models.Returnable.Film.FilmReturnModel

@{
    ViewData["Title"] = "Create";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>Create new film</h2>
        <hr>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="CreateOrUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.FilmId)
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control mb-3"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishYear">Year</label>
                <input asp-for="PublishYear" class="form-control mb-3"/>
                <span asp-validation-for="PublishYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control textarea mb-3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="row ">
    <div class="col-md-12">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@section Styles {
    <link href="~/css/films-createOrUpdate.css" rel="stylesheet"/>
}