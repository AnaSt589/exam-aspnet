@model Exam.Clients.WebUI.Common.Models.ViewModels.CreateOrUpdateFilmViewModel

@{
    ViewData["Title"] = "Create or update";
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>Create or update film</h2>
        <hr>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <form asp-action="CreateOrUpdate">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(model => model.Film.FilmId)

            <div class="form-row">
                <div class="col-md-4 mr-5">
                    <div class="form-group">
                        <input asp-for="Film.Title" class="form-control mb-4" placeholder="Title"/>
                        <span asp-validation-for="Film.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Film.PublishYear">Publish</label>
                        <input asp-for="Film.PublishYear" class="form-control mb-4"/>
                        <span asp-validation-for="Film.PublishYear" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <textarea asp-for="Film.Description" class="form-control textarea mb-4" placeholder="Description"></textarea>
                        <span asp-validation-for="Film.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="film_actors_nope" disabled="disabled">
                        <label class="custom-control-label" for="film_actors_nope" disabled="disabled">Don't specify actors.</label>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedActors, "Actors")
                        @Html.ListBoxFor(model => model.SelectedActors, Model.Actors, new {@class = "form-control"})
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@section Styles {
    <link href="~/css/films-createOrUpdate.css" rel="stylesheet"/>
}